<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numpad_layout"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center|right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAc"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:background="@drawable/roundedbutton"
            android:layout_marginEnd="20dp"
            android:text="@string/AllClean"
            android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnClear"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedbutton"
            android:src="@android:drawable/ic_input_delete"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="729dp"
        android:layout_height="208dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:weightSum="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:id="@+id/firstCol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSin"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/sin"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAsn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/asn"
                 />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:clickable="true"
                android:enabled="true"
                android:text="@string/ln"
                 />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPi"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundedbutton"
                android:gravity="center"
                android:text="@string/pi"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondCol"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCos"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/cos"
                 />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAcs"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/acs"
                 />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:clickable="true"
                android:enabled="true"
                android:text="@string/lg"
                 />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnExp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundedbutton"
                android:gravity="center"
                android:text="@string/e"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdCol"
            android:gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTan"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/tan"
                 />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/atn"
                 />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSqrt"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:clickable="true"
                android:enabled="true"
                android:text="@string/square"
                 />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFactorial"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundedbutton"
                android:gravity="center"
                android:text="@string/factorial"
                 />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthCol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPow"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/pow"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnProcent"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/procent"
                android:textSize="20dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLeftBracket"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:clickable="true"
                android:enabled="true"
                android:text="@string/leftBracket"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRightBracket"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundedbutton"
                android:gravity="center"
                android:text="@string/rightBracket"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthCol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/seven"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/four"
                android:textSize="20dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:clickable="true"
                android:enabled="true"
                android:text="@string/one"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDot"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/dot"
                android:textSize="50dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/sixsthCol"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn8"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/eight"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/five"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/two"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnZero"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/zero"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/seventhCol"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn9"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/nine"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/six"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/three"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEqual"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/equal"

                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/eigththCol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMultiply"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/multiply"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDivide"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/divide"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlus"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/plus"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMinus"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/minus"
                android:textSize="30dp" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>